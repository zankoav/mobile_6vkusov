<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/product_icon"
        android:layout_width="@dimen/product_icon_width"
        android:layout_height="@dimen/product_icon_height"
        android:scaleType="fitXY"
        android:layout_marginBottom="12dp"
        android:src="@drawable/ic_thumbs_up"/>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/product_icon"
        android:layout_alignTop="@+id/product_icon"
        android:textColor="@color/colorHeader"
        android:text="Пицца темпо Пицца темпо Пицца темпо Пицца темпо"
        android:maxLines="2"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/product_btn_remove"/>

    <!--<TextView-->
        <!--android:id="@+id/product_description"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="11sp"-->
        <!--android:ellipsize="end"-->
        <!--android:maxLines="3"-->
        <!--android:layout_marginLeft="10dp"-->
        <!--android:layout_toRightOf="@+id/product_icon"-->
        <!--android:layout_below="@+id/product_name"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--/>-->

    <TextView
        android:id="@+id/product_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вес 330 г"
        android:layout_toLeftOf="@+id/product_btn_remove"
        android:maxLines="2"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/product_icon"
        android:layout_below="@+id/product_name"
        />

    <Button
        android:id="@+id/product_btn_remove"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/variant_button_remove_shape_corner"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:text="x"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        />

    <Button
        android:id="@+id/product_btn_minus"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/variant_buttons_shape_corner"
        android:textColor="@color/colorGray"
        android:textStyle="bold"
        android:text="-"
        android:layout_toLeftOf="@+id/product_count"
        android:layout_below="@+id/product_icon"
        />

    <TextView
        android:id="@+id/product_count"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="0"
        android:background="@drawable/variant_buttons_shape_corner"
        android:textColor="@color/colorGray"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/product_icon"/>

    <Button
        android:id="@+id/product_btn_plus"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:background="@drawable/variant_buttons_shape_corner"
        android:textColor="@color/colorGray"
        android:textStyle="bold"
        android:text="+"
        android:layout_toRightOf="@id/product_count"
        android:layout_below="@+id/product_icon"/>


    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="10 р."
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/product_icon"
        />

</RelativeLayout>