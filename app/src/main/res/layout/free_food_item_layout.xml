<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/parent_product_item_layout">

    <ImageView
        android:id="@+id/free_food_icon"
        android:src="@drawable/rest_icon"
        android:layout_width="@dimen/product_icon_width"
        android:layout_height="@dimen/product_icon_height"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/free_food_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:maxLines="2"
        android:text="GBww wevwev wejv wjoe vow ev  weljv lkwe v welkv f"
        android:layout_toRightOf="@+id/free_food_icon"
        android:layout_alignTop="@+id/free_food_icon"
        android:textColor="@color/colorHeader"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/free_food_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="100 баллов"
        android:layout_marginBottom="5dp"
        android:textColor="@color/colorOdnoklasniki"
        android:layout_marginLeft="@dimen/product_description_marginLeft"
        android:layout_toRightOf="@+id/free_food_icon"
        android:layout_below="@+id/free_food_name" />

    <TextView
        android:id="@+id/free_food_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/product_description_textSize"
        android:text="jrnejnbre wemv mw evlj weljv lwe vk weljv lwe vlk welv lwke v boje rbj er bo"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/product_description_marginLeft"
        android:layout_toRightOf="@+id/free_food_icon"
        android:layout_below="@+id/free_food_points" />



    <Button
        android:id="@+id/free_food_add_basket"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="12dp"
        android:text="@string/promo_free_food"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/paddingLeftRight_product_add_basket"
        android:paddingRight="@dimen/paddingLeftRight_product_add_basket"
        android:background="@drawable/shape_corner_green"
        android:layout_below="@+id/free_food_description"/>



</RelativeLayout>