<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLLGray">

    <ImageView
        android:id="@+id/home"
        style="@style/ClickableImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:backgroundTint="@color/colorCheckOut"
        android:onClick="backButtonClick"
        android:src="@drawable/ic_arrow_back_black_24dp" />

    <TextView
        android:id="@+id/category_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDarkGray"
        android:textSize="14sp"
        android:maxLines="1"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="start"
        android:layout_toRightOf="@+id/home"
        android:textStyle="bold"
        tools:text="Категория" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorHeader"
        android:textSize="16sp"
        android:maxLines="1"
        android:textStyle="bold"
        android:paddingLeft="16dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/home"
        tools:text="Бургер" />

    <com.yarolegovich.discretescrollview.DiscreteScrollView
        android:id="@+id/item_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/item_name"
        />


    <TextView
        android:id="@+id/item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDarkGray"
        android:textSize="14sp"
        android:ellipsize="end"
        android:layout_margin="8dp"
        android:padding="8dp"
        android:layout_below="@+id/item_picker"
        tools:text="Описание" />
    <TextView
        android:id="@+id/item_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorOdnoklasniki"
        android:textSize="14sp"
        android:ellipsize="end"
        android:layout_margin="8dp"
        android:visibility="gone"
        android:padding="8dp"
        android:layout_below="@+id/item_picker"
        tools:text="400 баллов" />

    <ListView
        android:id="@+id/variants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_below="@+id/item_description"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:visibility="gone"
        android:id="@+id/food_by_points"
        android:onClick="foodPointsPressed"
        android:layout_marginRight="16dp"
        android:background="@drawable/buttons_style"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/item_description"
        android:text="Заказать"/>

    <com.andremion.counterfab.CounterFab
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colorButtons"
        app:backgroundTint="@color/colorButtons"
        android:src="@drawable/ic_shopping_cart"/>

</RelativeLayout>