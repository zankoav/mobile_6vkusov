<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorCheckOut">

    <include layout="@layout/action_bar"/>

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorHeader"
        android:textSize="16sp"
        android:maxLines="1"
        android:textStyle="bold"
        android:paddingLeft="16dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:layout_margin="4dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/action_bar"
        tools:text="Бургер" />

    <com.yarolegovich.discretescrollview.DiscreteScrollView
        android:id="@+id/item_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/item_name"
        />


    <TextView
        android:id="@+id/item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorDarkGray"
        android:textSize="14sp"
        android:ellipsize="end"
        android:layout_margin="16dp"
        android:layout_below="@+id/item_picker"
        tools:text="Описание" />

    <TextView
        android:id="@+id/item_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorOdnoklasniki"
        android:textSize="16sp"
        android:textStyle="bold"
        android:ellipsize="end"
        android:layout_margin="8dp"
        android:visibility="gone"
        android:padding="8dp"
        android:layout_below="@+id/item_picker"
        tools:text="400 баллов" />

    <ListView
        android:id="@+id/variants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/item_description"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:id="@+id/food_by_message"
        android:onClick="foodPointsPressed"
        android:textColor="@color/colorGray"
        android:layout_below="@+id/item_description"
        android:text="Необходимо войти" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:id="@+id/food_by_points"
        android:onClick="foodPointsPressed"
        android:background="@drawable/buttons_style"
        android:textColor="@color/colorWhite"
        android:layout_below="@+id/item_description"
        android:text="Заказать"/>

    <com.andremion.counterfab.CounterFab
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/colorButtons"
        app:backgroundTint="@color/colorButtons"
        android:src="@drawable/ic_shopping_cart"/>

</RelativeLayout>