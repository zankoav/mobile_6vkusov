<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/line_gradient"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:onClick="loginButtonClick"
    android:paddingTop="@dimen/image_final_width"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/menu_iv_user"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/user"
        app:border_color="@android:color/white"
        app:border_width="2dp" />

    <TextView
        android:id="@+id/menu_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        android:padding="6dp"
        android:text="500 баллов"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:background="@drawable/buttons_style"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:id="@+id/menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/menu_iv_user"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="Вход"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

    <TextView
        android:id="@+id/menu_email"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zankoav@mail.ru"/>

</RelativeLayout>
