<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background">

    <include layout="@layout/action_bar"/>

    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_alignBottom="@+id/et_name"
         />

    <EditText
        android:id="@+id/et_name"
        android:hint="@string/login_email"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="textEmailAddress"
        android:layout_centerInParent="true"
        android:textColor="@color/colorWhite"
        android:textColorHint="@color/colorGray"
        android:ems="10"
        android:textSize="14sp"
        android:padding="5dp"
        android:layout_margin="12dp"
        android:background="@drawable/apptheme_textfield_activated_holo_light"
        android:textCursorDrawable="@null" />

    <TextView
        android:id="@+id/call_friend"
        android:text="Приглосите друга и получите 200 дополничельных баллов на ваш счет. Баллы добавятся сразу после первого заказа Вашего друга."
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textSize="12sp"
        android:padding="5dp"
        android:textAlignment="center"
        android:layout_below="@+id/et_name"
        android:textColor="@color/colorGray"/>

    <Button
        android:text="Приглосить"
        android:textColor="@color/colorWhite"
        android:minHeight="50dp"
        android:textAllCaps="false"
        android:layout_below="@+id/call_friend"
        android:background="@drawable/buttons_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btn_call"
        android:textSize="14sp"
        android:layout_margin="12dp" />

</RelativeLayout>