<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context="by.vkus.alexandrzanko.mobile_6vkusov.Activities.Restaurant.RestaurantActivity">



    <android.support.design.widget.AppBarLayout
        android:id="@+id/main_menu_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/main.collapsing"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            >

            <FrameLayout
                android:id="@+id/main_framelayout_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:orientation="vertical"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.3">

                <ImageView
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_background"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    app:layout_scrollFlags="scroll|snap"
                    android:layout_height="match_parent"
                    android:padding="12dp">



                    <android.support.v7.widget.CardView
                        android:id="@+id/user_icon_view"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:padding="10dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/colorWhite">

                    <ImageView
                        android:id="@+id/restaurant_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>

                    </android.support.v7.widget.CardView>


                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:layout_marginRight="8dp"
                        android:text="Имя ресторана"
                        android:maxLines="2"
                        android:layout_toRightOf="@+id/user_icon_view"
                        android:layout_alignTop="@+id/user_icon_view"
                        android:textSize="20sp"/>

                    <TextView
                        android:id="@+id/user_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/user_icon_view"
                        android:layout_below="@+id/user_name"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/colorWhite"
                        android:text="Кухни Кухни Кухни Кухни Кухни "
                        android:maxLines="2"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/user_icon_view"
                        android:layout_below="@+id/user_email"
                        android:layout_marginTop="16dp"
                        android:textColor="@color/colorWhite"
                        android:text="Любимый"
                        android:onClick="favoriteSend"
                        android:textSize="18sp"/>

                    <Button
                        android:id="@+id/favorite"
                        android:layout_toRightOf="@+id/user_phone"
                        android:layout_marginLeft="8dp"
                        android:layout_alignBottom="@+id/user_phone"
                        android:background="@drawable/ic_favorite"
                        android:onClick="favoriteSend"
                        android:layout_width="24dp"
                        android:layout_height="24dp" />

                    <TextView
                        android:id="@+id/user_change_data"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/user_icon_view"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/colorWhite"
                        android:text="Отзывы:"
                        android:textSize="18sp"/>

                    <ImageView
                        android:id="@+id/restaurants_like_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_thumb_down"
                        android:scaleType="centerCrop"
                        android:layout_marginRight="4dp"
                        android:layout_toLeftOf="@+id/restaurant_dislikes"
                        android:layout_alignBottom="@+id/user_change_data" />

                    <TextView
                        android:id="@+id/restaurant_dislikes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:text="7"
                        android:layout_alignBottom="@+id/user_change_data"
                        android:layout_alignParentRight="true" />

                    <ImageView
                        android:id="@+id/restaurants_dislikes_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_thumbs_up"
                        android:scaleType="centerCrop"
                        android:layout_toLeftOf="@+id/restaurant_likes"
                        android:layout_alignBottom="@+id/user_change_data"
                        />

                    <TextView
                        android:id="@+id/restaurant_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:text="26"
                        android:layout_alignBottom="@+id/user_change_data"
                        android:layout_toLeftOf="@+id/restaurants_like_icon" />

                    <TextView
                        android:id="@+id/rest_working_time_title"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/user_change_data"
                        android:textSize="18sp"
                        android:text="@string/rest_working_time"/>

                    <TextView
                        android:id="@+id/rest_working_time_text"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_alignParentRight="true"
                        android:text="20:30-8:00"
                        android:layout_alignBottom="@+id/rest_working_time_title"/>


                    <TextView
                        android:id="@+id/rest_delivery_price_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/rest_working_time_title"
                        android:textColor="@color/colorWhite"
                        android:text="@string/rest_delivery_price"/>

                    <TextView
                        android:id="@+id/rest_delivery_price"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_alignParentRight="true"
                        android:textSize="18sp"
                        android:layout_alignBottom="@+id/rest_delivery_price_title"
                        android:text="бесплатно"/>


                    <TextView
                        android:id="@+id/rest_order_price_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_marginTop="8dp"
                        android:layout_below="@+id/rest_delivery_price_title"
                        android:text="@string/restaurants_delivery"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/rest_order_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorWhite"
                        android:layout_alignParentRight="true"
                        android:layout_alignBottom="@+id/rest_order_price_title"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:text="30.00 руб."/>

                </RelativeLayout>
            </FrameLayout>

        </android.support.design.widget.CollapsingToolbarLayout>

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="1dp"-->
            <!--android:background="@color/colorBeige"/>-->

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_actionbar_restaurant"
            app:theme="@style/ToolbarColoredBackArrow"
            app:popupTheme="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:background="@drawable/line_gradient"
            />

        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabTextColor="@color/colorTabLight"
            app:tabIndicatorColor="@color/colorWhite"
            app:tabSelectedTextColor="@color/colorWhite"
            android:background="@drawable/line_gradient_tabs"
            app:tabGravity="fill"
            app:tabMode="fixed"/>



    </android.support.design.widget.AppBarLayout>


    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />


</android.support.design.widget.CoordinatorLayout>
