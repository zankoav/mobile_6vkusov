<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    card_view:cardBackgroundColor="@color/colorWhite"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="3dp"
    card_view:cardUseCompatPadding="true"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:clickable="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorWhite">

        <RelativeLayout
            android:id="@+id/left_view_card"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:background="@color/colorWhite">

            <ImageView
                android:id="@+id/restaurants_icon"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/rest_icon"
                android:scaleType="fitCenter"
                android:layout_alignParentLeft="true"/>

            <ImageView
                android:id="@+id/restaurant_like_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/ic_thumbs_up"
                android:scaleType="centerCrop"
                android:layout_below="@+id/restaurants_icon"/>

            <TextView
                android:id="@+id/restaurants_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:textColor="@color/colorGray"
                android:layout_toRightOf="@+id/restaurant_like_icon"
                android:layout_alignBottom="@+id/restaurant_like_icon"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="26"/>

            <TextView
                android:id="@+id/restaurants_dislike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorGray"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/restaurants_dislike_icon"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="7"/>

            <ImageView
                android:id="@+id/restaurants_dislike_icon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_thumb_down"
                android:scaleType="centerCrop"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@+id/restaurants_dislike"
                android:layout_below="@+id/restaurants_icon"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/right_view_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBeige"
            android:gravity="center_vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/restaurants_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorHeader"
                android:maxLines="2"
                android:textStyle="bold"
                android:textAlignment="center"
                android:text="Имя ресторана"/>

            <TextView
                android:id="@+id/restaurants_kitchen_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:lines="1"
                android:layout_marginTop="6dp"
                android:text="кухни"
                android:layout_below="@+id/restaurants_name" />

            <TextView
                android:id="@+id/restaurants_work_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/restaurants_kitchen_type"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:text="@string/restaurant_recycle_adapter_work_time" />

            <TextView
                android:id="@+id/restaurants_work_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="8:00-23:00"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/restaurants_work_time_title"/>

            <TextView
                android:id="@+id/restaurants_delivery_time_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/restaurants_work_time_title"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:text="@string/restaurant_recycle_adapter_delivery_time" />

            <TextView
                android:id="@+id/restaurants_delivery_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="40 мин."
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/restaurants_delivery_time_title"/>

            <TextView
                android:id="@+id/restaurants_min_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/restaurants_delivery_time_title"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:text="@string/restaurant_recycle_adapter_min_price" />

            <TextView
                android:id="@+id/restaurants_min_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="20 руб."
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/restaurants_min_price_title"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>