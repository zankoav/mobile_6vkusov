<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    tools:context="by.vkus.alexandrzanko.mobile_6vkusov.Activities.MainActivityV2">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/user"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_save"
        android:onClick="loginButtonClick"
        app:border_color="@android:color/white"
        app:border_width="2dp"
        />

    <TextView
        android:text="Вход"
        android:textColor="@color/colorWhite"
        android:padding="5dp"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:onClick="loginButtonClick"
        android:background="@android:color/transparent"
        android:layout_width="match_parent"
        android:layout_above="@+id/registerMenu"
        android:layout_height="wrap_content"
        android:id="@+id/btn_save"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/generalMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_centerInParent="true">
        <TextView
            android:text="Еда"
            android:padding="5dp"
            android:clickable="true"
            android:textSize="16sp"
            android:onClick="foodMenuPressed"
            android:textColor="@color/colorWhite"
            android:drawableLeft="@drawable/ic_hamburger"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--<TextView-->
            <!--android:text="Бонусная программа"-->
            <!--android:padding="5dp"-->
            <!--android:clickable="true"-->
            <!--android:textSize="16sp"-->
            <!--android:onClick="bonusProgramPressed"-->
            <!--android:textColor="@color/colorWhite"-->
            <!--android:drawableLeft="@drawable/ic_star"-->
            <!--android:drawablePadding="10dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

        <TextView
            android:text="Избранные рестораны"
            android:padding="5dp"
            android:clickable="true"
            android:textSize="16sp"
            android:onClick="favoriteRestaurants"
            android:textColor="@color/colorWhite"
            android:drawableLeft="@drawable/ic_like"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:id="@+id/registerMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">
        <TextView
            android:text="Еда"
            android:padding="5dp"
            android:clickable="true"
            android:textSize="16sp"
            android:onClick="foodMenuPressed"
            android:textColor="@color/colorWhite"
            android:drawableLeft="@drawable/ic_hamburger"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!--<TextView-->
            <!--android:text="Бонусная программа"-->
            <!--android:padding="5dp"-->
            <!--android:clickable="true"-->
            <!--android:textSize="16sp"-->
            <!--android:onClick="bonusProgramPressed"-->
            <!--android:textColor="@color/colorWhite"-->
            <!--android:drawableLeft="@drawable/ic_star"-->
            <!--android:drawablePadding="10dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content" />-->

        <TextView
            android:text="Избранные рестораны"
            android:padding="5dp"
            android:clickable="true"
            android:textSize="16sp"
            android:onClick="favoriteRestaurants"
            android:textColor="@color/colorWhite"
            android:drawableLeft="@drawable/ic_like"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Выход"
            android:padding="5dp"
            android:clickable="true"
            android:textSize="16sp"
            android:onClick="exitMenuPressed"
            android:textColor="@color/colorWhite"
            android:drawableLeft="@drawable/ic_logout"
            android:drawablePadding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <TextView
        android:textColor="@color/colorWhite"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/app_version"
        android:layout_marginBottom="40dp"
        android:textSize="10sp"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        android:src="@drawable/ic_background"
        android:id="@+id/iv_lunchScreen" />


    <ImageView
        android:id="@+id/search_view"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="invisible"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_logo_search"/>

    <ImageView
        android:id="@+id/search_view_circle"
        android:layout_width="50dp"
        android:visibility="invisible"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/search_view"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="70dp"
        android:layout_alignBottom="@+id/search_view"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_cercle"/>



</RelativeLayout>
