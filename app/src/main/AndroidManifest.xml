            android:name=".Activities.AuthActivities.LoginActivityV2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.AuthActivities.RememberActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.CategoriesActivityV2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Trash.RestaurantsCardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.Restaurant.RestaurantActivityV2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.Restaurant.ProductActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.BasketActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.CheckOutActivity"
            android:parentActivityName=".Activities.Restaurant.RestaurantActivityV2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.ProfileActivities.ProfileActivityV2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.ProfileActivities.UserCallFriendsActivityV2"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activities.ProfileActivities.ChangeUserSettingsActivityV2"
            android:screenOrientation="portrait" />
        <activity android:name=".Activities.OurPintsV2"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.InfoActivityV2"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.FreeFoodActivityV2"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.Restaurant.ProductsActivityV2"
            android:screenOrientation="portrait"/>
        <activity android:name=".Activities.Restaurant.RestaurantsActivityV2"
            android:screenOrientation="portrait"/>
